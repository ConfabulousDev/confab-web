# Server Configuration
PORT=8080

# Database Configuration
DATABASE_URL=postgres://confab:confab@localhost:5432/confab?sslmode=disable

# S3/MinIO Configuration
# Standard AWS environment variable names
S3_ENDPOINT=localhost:9000
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
BUCKET_NAME=confab
S3_USE_SSL=false

# GitHub OAuth Configuration
# Create OAuth app at: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GITHUB_REDIRECT_URL=http://localhost:8080/auth/github/callback

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:5173

# Access Control Configuration (required)
# Comma-separated list of emails allowed to login (case-insensitive)
ALLOWED_EMAILS=alice@example.com,bob@example.com

# Invite-based login control (required)
# Users invited to private shares can also login if invited on or after this timestamp
# Set to 1 to allow all historically invited emails
# Set to a large value (e.g., 2000000000) to effectively disable invite-based login
ALLOW_INVITED_EMAILS_AFTER_TS=2000000000
