# Server Configuration
PORT=8080

# Database Configuration
DATABASE_URL=postgres://confab:confab@localhost:5432/confab?sslmode=disable

# S3/MinIO Configuration
# Standard AWS environment variable names
S3_ENDPOINT=localhost:9000
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
BUCKET_NAME=confab
S3_USE_SSL=false

# Security Configuration
# CSRF secret key - must be at least 32 characters
CSRF_SECRET_KEY=your-csrf-secret-key-at-least-32-chars

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5173

# Frontend URL (for OAuth redirects and links)
FRONTEND_URL=http://localhost:5173

# =============================================================================
# Authentication Configuration
# At least one auth method must be enabled: password, GitHub OAuth, or Google OAuth
# =============================================================================

# Password Authentication (recommended for local/BYOC deployments)
# Set to "true" to enable username/password login
AUTH_PASSWORD_ENABLED=true

# Admin Bootstrap (only used when password auth is enabled)
# Creates an admin user on first startup if no users exist
# Remove these after initial setup for security
ADMIN_BOOTSTRAP_EMAIL=admin@example.com
ADMIN_BOOTSTRAP_PASSWORD=change-me-immediately

# GitHub OAuth (optional)
# Create OAuth app at: https://github.com/settings/developers
# Leave blank to disable GitHub OAuth
# GITHUB_CLIENT_ID=your_github_client_id_here
# GITHUB_CLIENT_SECRET=your_github_client_secret_here
# GITHUB_REDIRECT_URL=http://localhost:8080/auth/github/callback

# Google OAuth (optional)
# Create OAuth credentials at: https://console.cloud.google.com/apis/credentials
# Leave blank to disable Google OAuth
# GOOGLE_CLIENT_ID=your_google_client_id_here
# GOOGLE_CLIENT_SECRET=your_google_client_secret_here
# GOOGLE_REDIRECT_URL=http://localhost:8080/auth/google/callback

# =============================================================================
# Email Configuration (required)
# =============================================================================

# Resend API key - get one at https://resend.com
RESEND_API_KEY=re_xxxxxxxxxxxx

# Email sender configuration
EMAIL_FROM_ADDRESS=noreply@example.com
EMAIL_FROM_NAME=Confab

# Rate limiting (optional, default: 100 emails per hour per user)
# EMAIL_RATE_LIMIT_PER_HOUR=100

# =============================================================================
# Optional Configuration
# =============================================================================

# User Limit Configuration
# Maximum number of users allowed in the system (default: 50)
# Set to 0 to block all new registrations
# MAX_USERS=50

# HTTP Timeout Configuration (optional)
# HTTP_READ_TIMEOUT=30s
# HTTP_WRITE_TIMEOUT=30s

# Debug/Profiling (optional)
# Set to "true" to enable pprof server on localhost:6060
# ENABLE_PPROF=false

# OpenTelemetry/Honeycomb (optional)
# OTEL_SERVICE_NAME=confabulous-backend
# OTEL_EXPORTER_OTLP_ENDPOINT=https://api.honeycomb.io
# OTEL_EXPORTER_OTLP_HEADERS=x-honeycomb-team=your-api-key
